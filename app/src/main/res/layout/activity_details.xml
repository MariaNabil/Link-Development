<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="#f1f2f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_above"
        android:layout_marginBottom="30dp"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/image1"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/publishedAt1"
        android:layout_alignBottom="@+id/image1"
        android:layout_alignRight="@+id/image1"
            android:layout_marginBottom="30dp"
            android:textColor="#ffff" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title1"
            android:layout_below="@+id/image1"
            android:textSize="24dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/author1"
            android:layout_below="@+id/title1"
            android:text="author1"
            android:textSize="17dp"
            android:textColor="#a0a0a0"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description1"
            android:layout_below="@+id/author1"
            android:inputType="textMultiLine"
            android:maxLines="20"
            android:scrollHorizontally="false"
            android:textSize="17dp"
            android:textColor="#a0a0a0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="OPEN WEBSITE"
        android:layout_below="@+id/description1"
        android:background="#000000"
        android:textColor="#ffff"></Button>
</LinearLayout>
</ScrollView>


